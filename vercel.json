{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "microservices/main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/python/(.*)",
            "dest": "microservices/main.py"
        },
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}